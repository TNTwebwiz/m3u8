             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:m3u8.download.manager.ui"
             mc:Ignorable="d" 
             x:Class="m3u8.download.manager.ui.ProgressBarUC"
             d:DesignWidth="200" d:DesignHeight="50"
             Padding="0" Margin="0"
             >
  <DockPanel x:Name="dockPanel" Margin="0">
